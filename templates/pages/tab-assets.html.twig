 
	<!-- Assets Tabs start -->
	<div id="tabContent" class="tab-content home flex-1 transition-all duration-1000 px-14 2xl-max:px-0 max-w-[1500px] mx-auto" style="transition: width 0.3s ease" aria-label="assets" data-tab="assets">
		<div
			class="content-area pb-6 h-full desktop-margin md-max:pl-0" id="content-area">
			<!-- Asset Grid -->
			<div
				class="flex flex-row flex-wrap gap-7 transition-all duration-1000 w-full md-max:pr-6 pl-6 z-0 relative">
				<!-- Asset 1  -->
				{% for item in assets %}
					<div class="asset-card w-[312px] shadow-xl rounded-2xl overflow-hidden active" aria-label="Asset Card">
						<div class="relative flex bg-[#99BFDB] items-center justify-center"> 
							 
							<img src="{{ item.assetImage ? item.assetImage : asset('build/images/1.png') }}" alt="Asset Image" class=" sm:w-[80%] w-full h-48 object-cover" style="max-width: 80%;" />
							 
							<button class="open-assets capitalize absolute text-center text-[14px] font-black -translate-x-8 translate-y-2 bg-black text-white py-3 px-8 rounded-lg">
								open asset
							</button>
							<div class="absolute top-2 left-2 bg-white rounded-full p-1 cursor-pointer">
								<img src="{{ asset('build/images/svg/select-green.svg') }}" alt="Select">
							</div>
							<div class="pt-[14px] text-center gap-1 flex flex-col items-center bg-white w-24 h-48">
								<div class="font-black text-lg uppercase">JPG</div>
								<div class="bg-tints-light-blue rounded-[4px] px-[7.5px] w-fit">
									DE
								</div>
								<button class="my-2">
									<img src="{{ asset('build/images/Share Icon.png') }}" class="h-12 w-12 object-cover openShareModal" alt=""/>
								</button>
								<button class="openDownloadModal">
									<img src="{{ asset('build/images/Download Icon.png') }}" alt=""/>
								</button>
							</div>
						</div>

						<p class="px-3 py-[14px]">
							{{ item.assetTitle ? item.assetTitle : 'Hier steht als Beispiel der sehr lange Dateiname der Datei' }}
						</p>
					</div>
				{% else %}
					<p>No assets found.</p>
				{% endfor %}
  
			</div>
		</div>
	</div>
	<!-- Assets Tabs end -->
 
